@model HotelManageSys.Models.ViewModels.RoomCustomerViewModel

@{
    ViewData["Title"] = "Details";
}

<h2> @Html.DisplayFor(model => model.Room.RoomType.Type)</h2>

<div>
    <h4>@Html.DisplayFor(model => model.Room.RoomNumber)</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>

        </dt>
        <dd>
            <img src=@("/images/" + Model.Room.RoomType.Type + ".jpg") class="img-responsive" alt="Cinque Terre" style="text-align:center;" width="550">
        </dd>
    </dl>
</div>
<div>
    @if (User.Identity.IsAuthenticated)
    {
        <a asp-action="Edit" asp-route-id="@Model.Room.RoomId" class="btn btn-default">Edit</a>
    }

    @if (!User.Identity.IsAuthenticated)
    {
        <a asp-area="" asp-controller="Bookings" asp-action="Create" asp-route-roomid="@Model.Room.RoomId" asp-route-customerid="@Model.Customer.CustomerId" class="btn btn-default">Booking</a>
    }
    @*<a asp-action="Index" class="btn btn-default" >Back to List</a>*@
    <a class="btn btn-default" onclick="javascript:history.back(-1);">Back to List</a>
</div>
